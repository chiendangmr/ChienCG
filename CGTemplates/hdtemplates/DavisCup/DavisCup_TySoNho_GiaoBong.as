	public class DavisCup_TySoNho_GiaoBong extends CasparTemplate{
		
		private var txtGroup:MovieClip = new MovieClip();		
		public var giaobong1:MovieClip;
		public var giaobong2:MovieClip;			
						
		public function DavisCup_TySoNho_GiaoBong() {
			// constructor code
			super();							
			
			this.txtGroup.addChild(giaobong1);
			this.txtGroup.addChild(giaobong2);
			
			this.addChild(txtGroup);
			ExternalInterface.addCallback("UpdateData", UpdateData);
			ExternalInterface.addCallback("GetProperties", GetProperties);			
		}		
		
		private function Add(xmlStr:String, str:String, txt:TextField){
			xmlStr='<'+ str + ' id="'+ str + '"><data value="' + txt.text + '"/></' + str +'>';
			return xmlStr;
		}
		function GetProperties()
		{
			var xmlStr:String = "<Track_Property>";						
			xmlStr += "</Track_Property>";
			
			ExternalInterface.call("Properties", xmlStr);
			return xmlStr;
		}
		function UpdateData(str:String)
		{
			var xml:XML = new XML(str);
			this.SetData(xml);
		}
		
		override public function SetData(xml:XML):void{
			for each (var element:XML in xml.children())
			{
				var property:String = element.@id;
				var data:String = element.data.@value;
				switch(property.toLowerCase())
				{					
					
					case "giaobong1".toLowerCase():
						if(data=="true"){
							giaobong1.visible=true;
							giaobong2.visible=false;
							}						
						break;
					case "giaobong2".toLowerCase():
						if(data=="true"){
							giaobong2.visible=true;
							giaobong1.visible=false;
						}
						break;									
				}
			}
		}
		public override function Play():void{
			gotoAndPlay('start');
		}
		public override function Stop():void{
			gotoAndPlay('stop');
		}		
	}
	
